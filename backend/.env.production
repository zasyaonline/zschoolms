# Production Environment Variables for Backend
# Copy these to your Render/Railway environment variables

# Database - REPLACE with your Render/Railway database URL
DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_HOST=your-db-host.onrender.com
DB_PORT=5432
DB_NAME=zschool_db
DB_USER=zschool_admin
DB_PASSWORD=your-secure-password

# Server Configuration
NODE_ENV=production
PORT=5001

# Frontend URL - REPLACE with your Netlify URL
FRONTEND_URL=https://your-site.netlify.app

# JWT Secrets - GENERATE SECURE RANDOM STRINGS!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration - Use real SMTP for production
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@zschool.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=10
MFA_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING

# Optional: Database SSL (Render requires this)
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false
